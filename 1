        function updateLanguage(lang) {
            // 切换页面文字
            const dict = i18n[lang];
            for (let key in dict) {
                const el = document.getElementById(key);
                if (el) el.innerText = dict[key];
            }
            
            // 切换阅读方向 (RTL for Arabic)
            if (lang === 'ar') {
                document.body.dir = "rtl";
                document.getElementById('langSelect').parentElement.classList.add('rtl-style');
            } else {
                document.body.dir = "ltr";
            }
        }

        function openModal() {
            document.getElementById('catalogModal').classList.remove('modal-inactive');
            document.getElementById('catalogModal').classList.add('modal-active');
        }

        function closeModal() {
            document.getElementById('catalogModal').classList.remove('modal-active');
            document.getElementById('catalogModal').classList.add('modal-inactive');
        }

        // 初始化默认语言为英文
        window.onload = () => updateLanguage('en');
    </script>
